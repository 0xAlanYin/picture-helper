/* pages/compress/index.wxss */
.container {
  padding: 30rpx;
  box-sizing: border-box;
}

.upload-section {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  color: #666;
  font-size: 28rpx;
}

.preview-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background-color: #f9f9f9;
}

.image-info {
  margin-top: 20rpx;
  color: #666;
  font-size: 26rpx;
  text-align: center;
}

.compress-section {
  width: 100%;
}

.slider-section {
  margin-bottom: 40rpx;
}

.slider-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  margin: 0;
}

.result-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  margin-top: 30rpx;
  color: #333;
  font-size: 26rpx;
}

.slider-tip {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}
