/* pages/recognition/index.wxss */
.container {
  padding: 30rpx;
  box-sizing: border-box;
}

.upload-section {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  color: #666;
  font-size: 28rpx;
}

.preview-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.image-wrapper {
  width: 100%;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.image-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  text-align: center;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
  background-color: #fff;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  margin: 0;
}

.result-section {
  width: 100%;
  margin-top: 30rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.result-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
}