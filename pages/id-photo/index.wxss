/* pages/id-photo/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.section.completed {
  border-left: 8rpx solid #438edb;
}

.step-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background-color: #438edb;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 尺寸选择样式 */
.size-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.size-item {
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.size-item.active {
  border-color: #438edb;
  background-color: #f0f7ff;
}

.size-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.size-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.size-desc {
  font-size: 24rpx;
  color: #666;
}

.size-check {
  color: #438edb;
  font-size: 36rpx;
}

/* 背景色选择样式 */
.color-list {
  display: flex;
  gap: 30rpx;
}

.color-item {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  position: relative;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.color-item.active {
  border: 3rpx solid #438edb;
  transform: scale(1.05);
}

.color-check {
  color: #333;
  font-size: 36rpx;
}

/* 上传区域样式 */
.upload-area {
  width: 100%;
  height: 400rpx;
  background-color: #f8f9fa;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

.upload-area:active {
  background-color: #f0f0f0;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 按钮样式 */
.button-section {
  margin: 40rpx 0;
}

.primary-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4794ff 0%, #438edb 100%);
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.primary-btn.disabled {
  background: #ccc;
  opacity: 0.7;
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 32rpx;
}

/* 进度提示样式 */
.progress-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.progress-text {
  color: #438edb;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.progress-bar {
  height: 4rpx;
  background: linear-gradient(90deg, #4794ff 0%, #438edb 100%);
  border-radius: 2rpx;
  width: 100%;
  animation: progress 2s infinite linear;
}

@keyframes progress {
  0% {
    width: 0%;
  }
  100% {
    width: 100%;
  }
}

/* 结果预览样式 */
.result-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.result-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.result-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  background-color: #f8f9fa;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.save-btn {
  background-color: #438edb;
  color: #fff;
}

.retry-btn {
  background-color: #f5f5f5;
  color: #666;
}
